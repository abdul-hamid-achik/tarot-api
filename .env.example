# Environment Configuration Example
# Copy this file to .env and replace values as needed
# NEVER commit the actual .env file to version control

# Rails configuration
RAILS_ENV=development
RAILS_MASTER_KEY=replacethiswithyouractualkey

# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=tarot_api
DB_PASSWORD=changemetoaproductioncomplexpassword
DATABASE_URL=postgres://tarot_api:password@localhost:5432/tarot_api_development

# Redis configuration
REDIS_URL=redis://localhost:6379/1

# S3/MinIO configuration (for file storage)
S3_ENDPOINT=http://localhost:9000
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_BUCKET=tarot-api
AWS_DEFAULT_REGION=us-west-2
AWS_ACCOUNT_ID=your_aws_account_id

# Pulumi configuration (for infrastructure/deployment)
PULUMI_CONFIG_PASSPHRASE=changemetosomethinglongandcomplex
# Pulumi state bucket (create with: rake infrastructure:tools:create_state_bucket)
PULUMI_STATE_BUCKET=tarot-api-pulumi-state
PULUMI_ENCRYPTION_SALT=generate_this_with_rake_infrastructure_tools_generate_salt

# Domain configuration
DOMAIN_NAME=yourdomain.com

# API Security
API_RATE_LIMIT=100 # requests per minute
API_TOKEN_EXPIRY=3600 # seconds

# GitHub Actions secrets (don't set these locally, configure in GitHub)
# GITHUB_TOKEN=
# GH_PAT=

# application configuration
APP_NAME=tarot_api

# pulumi configuration
PULUMI_BACKEND_URL=s3://tarotapi-pulumi-state

# OpenAI configuration
OPENAI_API_KEY=add-your-key-here

CUCUMBER_PUBLISH_QUIET=true

# docker compose bake for faster builds
COMPOSE_BAKE=true